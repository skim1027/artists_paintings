<a href="/artists">Artists</a>
<h1>All Paintings</h1>

<table>
<tr>
  <th>Painting Name</th>
  <th>Year Painted</th>
  <th>Oil Painting?</th>
  <th>Update Painting</th>
  <th>Delete Painting</th>
</tr>
<% @paintings.each do |painting| %>
  <tr>
    <td><%= painting.name %></td>
    <td><%= painting.year_painted %></td>
    <td><%= painting.oil_painting %></td>
    <td><%= link_to "Update #{painting.name}", "/paintings/#{painting.id}/edit", method: :get %></td>
    <td><%= link_to "Delete #{painting.name}", "/paintings/#{painting.id}", data: { turbo_method: :delete } %></td>
  </tr>
<% end %>

</table>


